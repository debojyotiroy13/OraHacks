{
    "name": "EasyInsight",
    "description": "KPI Autocomplete Plugin!",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["third-party/jquery.min.js", "third-party/ajax.js", "third-party/jquery-textcomplete.min.js", "js/autocomplete.js", "js/side-panel.js"],
          "css": ["css/style.css"]
        },
        {
          "matches": ["file:///Users/*"],
          "js": ["js/sample.js"]
        },
        {
          "matches": ["https://outlook.office.com/*"],
          "js": [ "js/outlook.js"]
        },
        {
          "matches": ["https://twitter.com/*"],
          "js": ["js/twitter.js"]
        },
        {
          "matches": ["https://confluence.oraclecorp.com/confluence/*"],
          "js": ["js/confluence.js"]
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": ["storage", "activeTab", "scripting", "tabs", "bookmarks"],
    "host_permissions": [
      "https://outlook.office.com/*",
      "file:///*/*",
      "https://twitter.com/*",
      "https://confluence.oraclecorp.com/confluence/*"
      ],
    "icons": {
      "16": "/images/Easy-Insights-logos16.png",
      "32": "/images/Easy-Insights-logos32.png",
      "48": "/images/Easy-Insights-logos48.png",
      "128": "/images/Easy-Insights-logos128.png"
    },
    "web_accessible_resources": [{
      "resources": ["/images/*", "/js/*", "popup.html"],
      "matches": ["<all_urls>"]
    }],
   "action": {}

}
